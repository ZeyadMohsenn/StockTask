@model CodeZone.DAL.Store

<div class="container rounded border border-primary p-3">
    <div class="row">
        <div class="col-6 mx-auto">
            <h2>Edit @Model.Name's Store</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name">Store Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ManagerName">Manager:</label>
                    <input asp-for="ManagerName" class="form-control" />
                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location">Adress:</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone:</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="OpeningTime">Opens at:</label>
                    <input asp-for="OpeningTime" class="form-control" />
                    <span asp-validation-for="OpeningTime" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ClosingTime">Closes at:</label>
                    <input asp-for="ClosingTime" class="form-control" />
                    <span asp-validation-for="ClosingTime" class="text-danger"></span>

                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary" style="margin-top: 10px;">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary" style="margin-top: 10px;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

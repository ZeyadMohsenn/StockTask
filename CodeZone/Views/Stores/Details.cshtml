@model CodeZone.DAL.Store

<div class="container rounded border border-primary p-3">
    <div class="row">
        <div class="col-6 mx-auto">
            <h2>@Model.Name Store Details</h2>

            <dl class="row">
                <dt class="col-sm-3">Store Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3">Manager:</dt>
                <dd class="col-sm-9">@Model.ManagerName</dd>
                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Location</dd>
                <dt class="col-sm-3">Opening at:</dt>
                <dd class="col-sm-9">@Model.OpeningTime</dd>
                <dt class="col-sm-3">Closing at:</dt>
                <dd class="col-sm-9">@Model.ClosingTime</dd>






            </dl>

            <div class="form-group">
                <a href="/stores/edit/@Model.Id" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Index" class="btn btn-outline-success">Back to List</a>

            </div>
        </div>
    </div>
</div>

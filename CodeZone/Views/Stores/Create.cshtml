@model CodeZone.BL.AddStoreDto

<div class="container rounded border border-primary p-3">
    <div class="row">
        <div class="col-6 mx-auto">
            <h2>Add New Store</h2>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control mb-2" style="width: 315px;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-outline-primary" style="width: 70px; margin-top: 10px;">Add </button>
                <a asp-action="Index" class="btn btn-outline-success" style="margin-top: 10px;">Back to List</a>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
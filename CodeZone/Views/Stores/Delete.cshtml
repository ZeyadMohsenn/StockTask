@model CodeZone.DAL.Store

<div class="container rounded border border-danger p-3">
    <div class="row">
        <div class="col-6 mx-auto">
            <h2>Delete @Model.Name's Store</h2>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <p class="text-danger">Are you sure you want to delete this store?</p>
                    <dl class="row">
                        <dt class="col-sm-3">Store Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                    </dl>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

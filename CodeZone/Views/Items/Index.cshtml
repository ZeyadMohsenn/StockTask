@model List<CodeZone.DAL.Item>

<h2>Our Items</h2>

<p>
    <a asp-action="Create">Add New Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="#" onclick="confirmDelete('@item.Id', '@item.ItemName')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/item-delete.js" asp-append-version="true"></script>
}

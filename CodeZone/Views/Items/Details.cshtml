@model CodeZone.DAL.Item
<div class="container rounded border border-primary p-3">
    <div class="row">
        <div class="col-6 mx-auto">
            <h2>@Model.ItemName Item Details</h2>

            <dl class="row">
                <dt class="col-sm-3">Item Name:</dt>
                <dd class="col-sm-9">@Model.ItemName</dd>
                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">@Model.price</dd>
                <dt class="col-sm-3">Available:</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>
            </dl>

            <div class="form-group">
                <a href="/items/edit/@Model.Id" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Index" class="btn btn-outline-success">Back to List</a>

            </div>
        </div>
    </div>
</div>

